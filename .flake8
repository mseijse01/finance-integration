[flake8]
max-line-length = 88
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    .venv,
    finance-integration.env,
    .pytest_cache,
    migrations,
    .env
# E203: whitespace before ':'
# W503: line break before binary operator  
# E501: line too long (handled by Black)
ignore = 
    E203,
    W503,
    E501
per-file-ignores =
    __init__.py:F401,
    tests/*:F401,F811